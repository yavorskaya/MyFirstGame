        <TextBlock Text="?" Grid.Row="2" Grid.Column="3" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <TextBlock Text="?" Grid.Row="3" Grid.Column="0" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBlock Text="?" Grid.Row="3" Grid.Column="1" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBlock Text="?" Grid.Row="3" Grid.Column="2" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBlock Text="?" Grid.Row="3" Grid.Column="30" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</Window>
